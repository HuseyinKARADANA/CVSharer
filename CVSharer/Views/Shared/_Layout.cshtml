</head>

<body>

    <!-- ======= Header ======= -->
    <header id="header" class="header fixed-top d-flex align-items-center">

        <div class=" align-items-center ">
            <a href="/Home/Index" class="logo align-items-center">
                <img src="~/assets/img/logo.png" alt="">
                <span class="">CVSharer</span>
            </a>
        </div><!-- End Logo -->



        <nav class="header-nav ms-auto">
            <ul class="d-flex align-items-center">
                <a href="/Home/Index" class="btn btn-light rounded-pill m-1">Homepage</a>
                <a href="/Shop/Index" class="btn btn-light rounded-pill m-1">Shop</a>
                <a href="/Home/Contact" class="btn btn-light rounded-pill m-1">Contact</a>
                @if(Context.User.Identity.IsAuthenticated)
                {
                    var userId = Context.Request.Cookies["UserId"];
                    var user = _userService.GetElementById(int.Parse(userId));

                    <nav class="header-nav ms-auto">
                        <ul class="d-flex align-items-center">
                            <li class="nav-item dropdown pe-3">

                                <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
                                    <img src="~/assets/img/profile-img.jpg" alt="Profile" class="rounded-circle">
                                    <span class="d-none d-md-block dropdown-toggle ps-2">@user.Name @user.Surname</span>
                                </a><!-- End Profile Image Icon -->

                                <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
                                    <li class="dropdown-header">
                                        <h6>@user.Name @user.Surname</h6>
                                        <span>@user.Position</span>
                                    </li>
                                    <li>
                                        <hr class="dropdown-divider">
                                    </li>

                                    <li>
                                        <a class="dropdown-item d-flex align-items-center" href="users-profile.html">
                                            <i class="bi bi-person"></i>
                                            <span>My Profile</span>
                                        </a>
                                    </li>
                                    <li>
                                        <hr class="dropdown-divider">
                                    </li>

                                    <li>
                                        <a class="dropdown-item d-flex align-items-center" href="users-profile.html">
                                            <i class="bi bi-gear"></i>
                                            <span>Account Settings</span>
                                        </a>
                                    </li>
                                    <li>
                                        <hr class="dropdown-divider">
                                    </li>

                                    <li>
                                        <a class="dropdown-item d-flex align-items-center" href="pages-faq.html">
                                            <i class="bi bi-question-circle"></i>
                                            <span>Need Help?</span>
                                        </a>
                                    </li>
                                    <li>
                                        <hr class="dropdown-divider">
                                    </li>

                                    <li>
                                        <a class="dropdown-item d-flex align-items-center" href="/Session/LogOut">
                                            <i class="bi bi-box-arrow-right"></i>
                                            <span>Sign Out</span>
                                        </a>
                                    </li>

                                </ul>
                            </li>

                        </ul>
                    </nav>
                }
                else{
                    <a href="/Session/Login" class="btn btn-outline-primary rounded-pill m-1">Login</a>
                    <a href="/Session/Register" class="btn btn-outline-warning rounded-pill m-1">Register</a>
                }





            </ul>
        </nav><!-- End Icons Navigation -->

    </header><!-- End Header -->

    <main id="main" class="main">
        @RenderBody()
    </main><!-- End #main -->
    <!-- ======= Footer ======= -->
    <div class="container-fluid text-dark " style="background-color:antiquewhite;">
        <div class="row px-xl-5 pt-5">
            <div class="col-lg-2">
                <img src="~/assets/img/logo.png" width="80rem" />
                    <h1 class=" font-weight-semi-bold ">CVSharer</h1>
                <p class=""><a href="mailto:sharercv@gmail.com" >sharercv@gmail.com</a></p>
            </div>
            <br />
            <div class="col-lg-8 ">
                <div class="row">
                    <div class="col-md-4 mb-4">
                        <h5 class="font-weight-bold text-dark mb-4">Quick Links</h5>
                        <div class="d-flex flex-column justify-content-start">
                            <a class="text-dark mb-2" href="/Home/Index"><i class="fa fa-angle-right mr-2"></i>Home</a>
                            <a class="text-dark mb-2" href="/Shop/Index"><i class="fa fa-angle-right mr-2"></i>Shop</a>
                            <a class="text-dark mb-2" href="/Home/Privacy"><i class="fa fa-angle-right mr-2"></i>Privacy Policy</a>
                            <a class="text-dark" href="/Home/Terms"><i class="fa fa-angle-right mr-2"></i>Terms and Conditions</a>
                        </div>
                    </div>
                    <div class="col-8 ">
                        <h3 class="font-weight-bold text-dark align-content-center">
                            Make Your Dream CV And Share It Easily!
                        </h3>
                        <br />
                        <p>
                            CVSharer is a CV creation platform that helps you steer your career effectively. With its user-friendly interface, customizable templates, and easy sharing features, it enhances the efficiency of your job search process.
                        </p>
                    </div>
                    

                </div>
            </div>
        </div>
        <hr style="color:black;height:1rem" />
        <div class="copyright text-center">
            &copy; Copyright <strong><span>CV Sharer</span></strong>. All Rights Reserved
            <br />
        </div>
    </div>
    
    <!-- End Footer -->

    <!-- Vendor JS Files -->
    <script src="~/assets/vendor/apexcharts/apexcharts.min.js"></script>
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/vendor/chart.js/chart.umd.js"></script>
    <script src="~/assets/vendor/echarts/echarts.min.js"></script>
