@model EntityLayer.Concrete.Education

@{
    ViewData["Title"] = "UpdateEducation";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var userId = Context.Request.Cookies["UserId"];
}

<div class="container">

    <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">

                    <div class="d-flex justify-content-center py-4">
                        <a href="/Home/Index" class="logo d-flex align-items-center w-auto">
                            <img src="~/assets/img/logo.png" alt="">
                            <span class="d-none d-lg-block">CVSharer</span>
                        </a>
                    </div><!-- End Logo -->

                    <div class="card mb-3">

                        <div class="card-body">

                            <div class="pt-4 pb-2">
                                <h5 class="card-title text-center pb-0 fs-4">Update Education</h5>
                                <p class="text-center small">Update Your Education</p>
                            </div>

                            <form class="row g-3 needs-validation" novalidate method="post">

                                <input hidden value="@int.Parse(userId)" name="UserId" />

                                <div class="form-floating">
                                    <input type="text" class="form-control" id="EName" name="EName" value="@Model.EName" placeholder="Education Name" required>
                                    <label for="EName">Education Name</label>
                                    <div class="invalid-feedback">Please Enter a Education Name!</div>
                                </div>

                                <div class="form-floating">
                                    <input type="text" class="form-control" id="StartDate" name="StartDate" value="@Model.StartDate.ToShortDateString()" placeholder="Education Date" onfocus="(this.type='date')" onblur="(this.type='text')" required>
                                    <label for="StartDate">Education Date</label>
                                    <div class="invalid-feedback">Please Enter a Education Date!</div>
                                </div>

                                <div class="form-floating">
                                    <input type="text" class="form-control" id="EndDate" name="EndDate" value="@(Model.EndDate != null ? Model.EndDate.Value.ToShortDateString() : Model.EndDate)" placeholder="Education Expire Date (Optional)" onfocus="(this.type='date')" onblur="(this.type='text')">
                                    <label for="EndDate">Education Expire Date (Optional)</label>
                                </div>

                                <div class="col-12">
                                    <button class="btn btn-primary w-100 rounded-pill" type="submit">Update Education</button>
                                </div>

                            </form>

                        </div>
                    </div>


                </div>
            </div>
        </div>

    </section>

</div>